@using MvcApplication5.Models;
@model IEnumerable<Customer>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"/>
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script src="/public/delete.js"></script>
    <title></title>
</head>
<body>
<div class="container">
    <a href="/people/add" class="btn btn-primary">Add New</a>
    <table class="table table-hover table-striped table-bordered">
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
        @foreach (Customer c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Address</td>
                <td>
                    <a href="/people/edit?personId=@c.Id" class="btn btn-warning">Edit</a>
                    <form method="POST" action="/people/delete" class="delform">
                        <input type="hidden" value="@c.Id" name="id"/>
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
</body>
</html>